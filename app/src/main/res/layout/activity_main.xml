<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/foodbackground"
                                             tools:context=".MainActivity">

    <ImageView
            android:layout_width="320dp"
            android:layout_height="185dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/button_speak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Suggest food"
            android:background="@android:color/holo_orange_light"
            app:layout_constraintStart_toStartOf="@+id/edittext_input"
            app:layout_constraintEnd_toEndOf="@+id/edittext_input"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edittext_input"/>
    <EditText
            android:id="@+id/edittext_input"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.504">
        <requestFocus/>
    </EditText>
</android.support.constraint.ConstraintLayout>